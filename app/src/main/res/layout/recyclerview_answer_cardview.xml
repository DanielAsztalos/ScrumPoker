    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/colorPrimary"
    app:cardBackgroundColor="@color/colorPrimary">

    <TextView
        android:id="@+id/tv_number"
